@model puceAsk_dev1.Models.Respuesta

@{
    ViewBag.Title = "Delete";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="card-header" style="text-align:center; width:inherit">
            <h3>Eliminar Respuesta</</h3>
        </div>
        <div class="card-body" align="center">
            <h4>¿Está seguro de eliminar esta respuesta?</h4><hr />
            <dl class="dl-horizontal">

                <dt>
                    <label>Fecha de Publicacion</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaPublicacion)
                </dd>

                <dt>
                    <label>Respuesta</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DescRespuesta)
                </dd>

            </dl>
           
        </div>
        <div class="card-footer">
            <div class="" align="left">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ActionLink("Regresar", "Index", null, null, new { @class = "btn btn-danger" })

                    <input type="submit" value="Eliminar" class="btn btn-primary" style="background-color:darkred; border-color:darkred" />

                }
            </div>
        </div>        
    </div>
</div>        