@model puceAsk_dev1.Models.Respuesta

@{
    ViewBag.Title = "Delete";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="card-header" style="text-align:center; width:inherit">
            <h3>Eliminar Respuesta</</h3>
            <hr />
            <h4>¿Desea eliminar esta respuesta?</h4>
        </div>
        <div class="card-body" align="center">
            <dl class="dl-horizontal">

                <dt>
                    <label>Fecha de Publicacion</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaPublicacion)
                </dd>

                <dt>
                    <label>Respuesta</label>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DescRespuesta)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>                   
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex links align-content-center">
                @Html.ActionLink("Regresar", "Index")
            </div>
        </div>        
    </div>
</div>        