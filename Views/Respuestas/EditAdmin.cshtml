@model puceAsk_dev1.Models.Respuesta
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="d-flex justify-content-center align-items-center">
        <div class="card">
            <div class="card-header" style="text-align:center; width:inherit">
                <h4>Respuesta</h4>
            </div>
            <div class="card-body" align="center" style="padding: 0 ;width: 400px;">

                <div class="card-header">
                    <label>Respuesta previa: @TempData["desc"]</label>
                </div>

                <div class="form-group">
                    <br />
                    @Html.TextAreaFor(model => model.DescRespuesta, new { htmlAttributes = new { @class = "textarea" } })
                    @Html.ValidationMessageFor(model => model.DescRespuesta, "", new { @class = "text-danger" })
                </div>

                
            </div>
            <div class="card-footer">
                <div class="form-group">
                    <div class="" align="left">
                        @Html.ActionLink("Regresar", "Index", null, null, new { @class = "btn btn-danger" })
                        <input type="submit" value="Actulizar" class="btn btn-primary" style="background-color:darkcyan; border-color:darkcyan" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    <style>
        textarea {
            max-width: 90%;
            width: 100%;
            height: 250px;
        }
    </style>

