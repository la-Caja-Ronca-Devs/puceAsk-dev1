@model puceAsk_dev1.Models.Respuesta


<div class="d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="card-header" style="text-align:center; width:inherit">
            <h4>Respuesta</h4>
        </div>
        <div class="card-body" align="center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card-header">
                    <label>Respuesta previa: @TempData["desc"]</label>                    
                </div>

                <div class="form-group">
                    <br />
                    @Html.TextAreaFor(model => model.DescRespuesta, new { htmlAttributes = new { @class = "textarea" } })
                    @Html.ValidationMessageFor(model => model.DescRespuesta, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Actulizar" class="btn btn-success" />
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <div class="d-flex links align-content-center" align="right">                
                    @Html.ActionLink("Regresar", "Index",null,null, new { @class = "btn btn-secondary"})
            </div>           
        </div>
    </div>
</div>
<style>
    textarea {
        max-width: 100%;
        width: 100%;
        height: 250px;
    }
</style>

