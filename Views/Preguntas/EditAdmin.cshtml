@model puceAsk_dev1.Models.Pregunta

@{
    ViewBag.Title = "EditAdmin";
}


<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="d-flex justify-content-center align-items-center">
            <div class="card">
                <div class="card-header" align="center">
                    <h4>Pregunta</h4>
                    @Html.HiddenFor(model => model.PreguntaId)

                </div>
                <div class="card card-body" align="center" style="padding: 0 ;width: 400px;">
                    <div class="form-group" style="padding: 0">
                        <br /> @Html.LabelFor(model => model.TituloPregunta, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-9">
                        @Html.TextAreaFor(model => model.TituloPregunta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TituloPregunta, "", new { @class = "text-danger" })
                    </div>
                    </div>
                    <div class="form-group" style="padding: 0">
                        @Html.LabelFor(model => model.DescPregunta, htmlAttributes: new { @class = "control-label" })
                        <div class="col-sm-9">
                            @Html.TextAreaFor(model => model.DescPregunta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DescPregunta, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group" style="padding: 0">
                        @Html.LabelFor(model => model.CategoriaId, "Categoría", htmlAttributes: new { @class = "control-label" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.CategoriaId, new SelectList(ViewBag.categorias, "CategoriaId", "NombreCategoria", "Seleccionar"), new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>


                </div>
                <div class="card-footer">

                    <div class="col" align="left">
                        @Html.ActionLink("Regresar", "Index", null, null, new { @class = "btn btn-danger" })
                        <input type="submit" value="Actualizar" class="btn btn-primary" style="background-color:darkcyan; border-color:darkcyan" />
                    </div>

                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    
    textarea{
        width:100%;
        height:120px;
    }
</style>