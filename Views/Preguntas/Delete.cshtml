@model puceAsk_dev1.Models.Pregunta

@{
    ViewBag.Title = "Delete";
}

<br/>

<div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="card">
            <div class="card-header" align="center">
                <h4>Eliminar Pregunta</h4>
            </div>
            <div class="card card-body" align="center" style="padding: 0 ;width: 500px;">
                <h5><br />¿Está seguro de eliminar esta pregunta?</h5>
                <hr />
                <dl class="dl-horizontal">
                    
                    <dt>
                        @Html.DisplayNameFor(model => model.TituloPregunta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TituloPregunta)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.DescPregunta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DescPregunta)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Fechapregunta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fechapregunta)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col" align="left">
                        @Html.ActionLink("Regresar", "Index",null, new { @class = "btn btn-danger btn-large" })
                        <input type="submit" value="Eliminar" class="btn btn-primary" style="background-color:darkred; border-color:darkred" />

                    </div>
                }
            </div>
        </div>
    </div>
</div>
