@model IEnumerable<puceAsk_dev1.Models.Pregunta>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de preguntas</h2>
<br />

<table class="table row">

    <tr>

        <th style="width:25%">
            @Html.DisplayNameFor(model => model.TituloPregunta)
        </th>
        <th style="width:25%">
            @Html.DisplayNameFor(model => model.DescPregunta)
        </th>
        <th style="width:20%">
            @Html.DisplayNameFor(model => model.Fechapregunta)
        </th>
        <th style="width:30%"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TituloPregunta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescPregunta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fechapregunta)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", null, new { id = item.PreguntaId }, new { @class = "btn btn-primary", @style = "background-color:darkcyan; border-color:darkcyan" })
                @Html.ActionLink("Detalles", "Details", null, new { id = item.PreguntaId }, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Eliminar", "Delete", null, new { id = item.PreguntaId }, new { @class = "btn btn-primary", @style = "background-color:darkred;border-color:darkred" })
            </td>
        </tr>
    }

</table>
