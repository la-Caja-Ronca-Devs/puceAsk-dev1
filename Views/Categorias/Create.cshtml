@model puceAsk_dev1.Models.Categoria

@{
    ViewBag.Title = "Create";
}


<div class="d-flex justify-content-center align-items-center " style="margin: 35px;">
    <div class="card" style=" width: 40rem;">
        <div class="card-header datos">
            <h2>Crear categoría</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NombreCategoria, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreCategoria, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreCategoria, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DescCategoria, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DescCategoria, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                    @Html.ValidationMessageFor(model => model.DescCategoria, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-secondary" })
                    <input type="submit" value="Crear" class="btn btn-success"/>
                </div>
            </div>
        </div>
            }
        </div>
    </div>
</div>

