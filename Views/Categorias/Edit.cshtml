@model puceAsk_dev1.Models.Categoria

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="" style="margin: 35px;">
        <div class="card" >
            <div class="card-header datos">
                <h2>Editar categoría</h2>
            </div>

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CategoriaId)


                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NombreCategoria, htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-12"  >
                            @Html.EditorFor(model => model.NombreCategoria, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NombreCategoria, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DescCategoria, htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.DescCategoria, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DescCategoria, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-danger btn-large" })
                            <input type="submit" value="Guardar" class="btn btn-primary" style="background-color:darkcyan; border-color:darkcyan" />
                        </div>
                    </div>
                </div>
            </div>
          

        </div>
    </div>
}
<style>
    textarea {
        width: 100%;
        height: 120px;
        border: 1px solid #ced4da;
    }
    .card {
        width: 40%;
        margin-right: auto !important;
        margin-left: auto !important;
    }
</style>
